<form class='col-3' {{on "submit" this.authenticate}}>
<div class="form-outline mb-4">
  <label class="form-label" for="identification">Login</label>
  <input class='form-control' id='identification' placeholder="Enter Login" value={{this.identification}} {{on "change" this.updateIdentification}}>
   </div>
    <div class="form-outline mb-4">
  <label class="form-label" for="password">Password</label>
  <input class="form-control"  id='password' type="password" placeholder="Enter Password" value={{this.password}} {{on "change" this.updatePassword}}>
   </div>
  <button class="btn btn-primary btn-block mb-4" type="submit">Login</button>
  {{#if this.errorMessage}}
    <p>{{this.errorMessage}}</p>
  {{/if}}
</form>

